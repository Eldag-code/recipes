	<script type="text/javascript"
	  src="http://pagead2.googlesyndication.com/pagead/show_ads.js">
	</script>

	<h2>Comments</h2>
	<div id="js-kit-comments" label="Comment on this recipe" path="/<%= @recipe.id%>"></div>
	<script src="http://js-kit.com/comments.js"></script>	


	<p class="admin"><%= link_to 'Edit', :action => 'edit', :id => @recipe.id %></p>

</div>

